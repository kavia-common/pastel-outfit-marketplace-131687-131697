{
  "name": "pastel-outfit-ecommerce-backend",
  "version": "1.0.0",
  "description": "Express backend for pastel outfit ecommerce with products, auth, cart, orders, and Stripe checkout",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "openapi": "node generate_openapi.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^16.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build"
    ],
    "ext": "js,json"
  }
}
